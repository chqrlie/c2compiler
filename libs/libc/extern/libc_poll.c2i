module libc_poll;

extern "C" {

struct Pollfd @(cname="pollfd") {
    int fd;
    short events;
    short revents;
}

int poll(Pollfd* fds, unsigned long nfds, int timeout);

const u32 POLLIN   = 0x01;
const u32 POLLOUT  = 0x04;
const u32 POLLERR  = 0x08;
const u32 POLLHUP  = 0x10;
const u32 POLLNVAL = 0x20;

}
