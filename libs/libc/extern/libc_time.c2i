module libc_time;

extern "C" {

struct Tm {
    int tm_sec;    /* Seconds (0-60) */
    int tm_min;    /* Minutes (0-59) */
    int tm_hour;   /* Hours (0-23) */
    int tm_mday;   /* Day of the month (1-31) */
    int tm_mon;    /* Month (0-11) */
    int tm_year;   /* Year - 1900 */
    int tm_wday;   /* Day of the week (0-6, Sunday = 0) */
    int tm_yday;   /* Day in the year (0-365, 1 Jan = 0) */
    int tm_isdst;  /* Daylight saving time */

    long tm_gmtoff;
    const char* tm_zone;
}

type Time long @(cname="time_t");

Time time(Time* tloc);

char* asctime(const Tm* tm);
char* asctime_r(const Tm* tm, char* buf);

char* ctime(const Time* timep);
char* ctime_r(const Time* timep, char* buf);

Time* gmtime(const Time* timep);
Time* gmtime_r(const Time* timep, Tm* result);

Tm* localtime(const Time* timep);
Tm* localtime_r(const Time* timep, Tm* result);

Time mktime(Tm* tm);

size_t strftime(char *s, size_t max, const char *format, const Tm *tm);

}
